{
  "name": "feryardiant/wordpress-boilerplate",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate based-on Bedrock by Roots.",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Fery Wardiyanto",
      "email": "ferywardiyanto@gmail.com",
      "homepage": "https://github.com/feryardiant"
    }
  ],
  "keywords": [
    "bedrock", "composer", "roots", "wordpress", "wp", "wp-config", "boilerplate"
  ],
  "support": {
    "issues": "https://github.com/feryardiant/wordpress-boilerplate/issues"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "copy:htaccess": [
      "php -r \"copy('public/.htaccess.example', 'public/.htaccess');\""
    ],
    "test": [
      "phpcs"
    ]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.1",
    "composer/installers": "^1.7",
    "oscarotero/env": "^1.2",
    "roots/wordpress": "^5.2",
    "roots/wp-config": "^1.0",
    "roots/wp-password-bcrypt": "^1.0",
    "vlucas/phpdotenv": "^3.4",
    "wp-cli/core-command": "^2.0",
    "wp-cli/entity-command": "^2.0",
    "wp-cli/wp-cli": "^2.3",
    "wpackagist-plugin/regenerate-thumbnails": "^3.1",
    "wpackagist-plugin/wordpress-importer": "^0.6.4"
  },
  "require-dev": {
    "aaemnnosttv/wp-cli-dotenv-command": "^2.0",
    "roave/security-advisories": "dev-master",
    "roots/multisite-url-fixer": "^1.1",
    "squizlabs/php_codesniffer": "^3.4.2"
  },
  "extra": {
    "installer-paths": {
      "public/app/mu-plugins/{$name}/": [
        "wpackagist-plugin/regenerate-thumbnails",
        "wpackagist-plugin/wordpress-importer",
        "type:wordpress-muplugin"
      ],
      "public/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "public/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "public/wp"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
