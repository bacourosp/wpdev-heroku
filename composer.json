{
  "name": "feryardiant/wordpress-boilerplate",
  "version": "0.1.1-alpha.2",
  "description": "WordPress boilerplate based-on Bedrock by Roots.",
  "homepage": "https://github.com/feryardiant/wordpress-boilerplate/",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Fery Wardiyanto",
      "email": "ferywardiyanto@gmail.com",
      "homepage": "https://feryardiant.github.io/",
      "role": "Maintainer"
    }
  ],
  "keywords": [
    "bedrock",
    "composer",
    "roots",
    "wordpress",
    "wp",
    "wp-config",
    "boilerplate"
  ],
  "support": {
    "issues": "https://github.com/feryardiant/wordpress-boilerplate/issues"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "lint": [
      "phpcs --standard=source/phpcs.xml source"
    ],
    "wp:install": [
      "vendor/bin/wp core install --title='WordPress Boilerplate Site' --admin_user=admin --admin_password=secret --admin_email=admin@bedrock.wp --skip-email",
      "vendor/bin/wp option update permalink_structure '/%postname%/'"
    ],
    "wp:reset": [
      "vendor/bin/wp db reset --yes",
      "@wp:install"
    ]
  },
  "repositories": {
    "wpackagist": {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    "local_theme": {
      "type": "path",
      "url": "source/themes/wpbp",
      "options": {
        "symlink": true
      }
    }
  },
  "require": {
    "php": ">=7.1",
    "composer/installers": "^1.7",
    "humanmade/s3-uploads": "^2.1",
    "local-theme/wpbp": "*",
    "oscarotero/env": "^1.2",
    "predis/predis": "^1.1",
    "roots/wordpress": "^5.2",
    "roots/wp-config": "^1.0",
    "roots/wp-password-bcrypt": "^1.0",
    "vlucas/phpdotenv": "^3.4",
    "wp-cli/cache-command": "^2.0",
    "wp-cli/config-command": "^2.0",
    "wp-cli/core-command": "^2.0",
    "wp-cli/cron-command": "^2.0",
    "wp-cli/db-command": "^2.0",
    "wp-cli/entity-command": "^2.0",
    "wp-cli/wp-cli": "^2.3",
    "wpackagist-plugin/akismet": "^4.1",
    "wpackagist-plugin/redis-cache": "^1.4",
    "wpackagist-plugin/regenerate-thumbnails": "^3.1",
    "wpackagist-plugin/wordpress-importer": "^0.6.4"
  },
  "require-dev": {
    "aaemnnosttv/wp-cli-dotenv-command": "^2.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.4",
    "wp-cli/i18n-command": "^2.2",
    "wp-cli/scaffold-command": "^2.0",
    "wp-coding-standards/wpcs": "^2.1",
    "wpackagist-plugin/debug-bar": "^1.0",
    "wpackagist-plugin/theme-check": "20190801.1"
  },
  "extra": {
    "installer-paths": {
      "public/app/mu-plugins/{$name}/": [
        "humanmade/s3-uploads",
        "wpackagist-plugin/akismet",
        "wpackagist-plugin/debug-bar",
        "wpackagist-plugin/redis-cache",
        "wpackagist-plugin/theme-check",
        "wpackagist-plugin/regenerate-thumbnails",
        "wpackagist-plugin/wordpress-importer",
        "type:wordpress-muplugin"
      ],
      "public/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "public/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "dropin-paths": {
      "public/app": [
        "package:wpackagist-plugin/redis-cache:includes/object-cache.php"
      ]
    },
    "wordpress-install-dir": "public/wp"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
