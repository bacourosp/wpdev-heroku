{
  "name": "wpbp",
  "version": "0.1.0",
  "author": "Fery Wardiyanto <ferywardiyanto@gmail.com>",
  "license": "MIT",
  "private": true,
  "keywords": [
    "wordpress",
    "wordpress-theme",
    "wordpress-boilerplate"
  ],
  "scripts": {
    "lint:css": "stylelint"
  },
  "dependencies": {
    "bulma": "^0.7.5"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "autoprefixer": "^9.6.1",
    "cross-env": "^5.2.1",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "dotenv": "^8.1.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-imagemin": "^6.1.0",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-uglify": "^3.0.2",
    "gulp-wp-pot": "^2.3.5",
    "gulp-zip": "^5.0.0",
    "postcss-reporter": "^6.0.1",
    "stylelint": "^10.1.0",
    "stylelint-config-standard-scss": "^1.1.0",
    "stylelint-scss": "^3.11.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "wordpress"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-console": 2
    }
  },
  "eslintIgnore": [
    "/node_modules/**",
    "/public/**",
    "**/vendor/**",
    "/gulpfile.js",
    "/**.old"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard-scss"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ]
}
