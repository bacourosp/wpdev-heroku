{
  "name": "wpbp",
  "version": "0.1.1-minor.0",
  "author": "Fery Wardiyanto <ferywardiyanto@gmail.com>",
  "license": "MIT",
  "private": true,
  "keywords": [
    "wordpress",
    "wordpress-theme",
    "wordpress-boilerplate"
  ],
  "scripts": {
    "lint:js": "eslint",
    "lint:css": "stylelint",
    "release": "standard-version"
  },
  "dependencies": {
    "bulma": "^0.7.5"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@wordpress/eslint-plugin": "^3.1.0",
    "babel-eslint": "^10.0.3",
    "browser-sync": "^2.26.7",
    "cross-env": "^5.2.1",
    "del": "^5.1.0",
    "dotenv": "^8.1.0",
    "eslint": "^6.4.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-clean-css": "^4.2.0",
    "gulp-connect-php": "^1.0.3",
    "gulp-eslint": "^6.0.0",
    "gulp-imagemin": "^6.1.0",
    "gulp-phpcs": "^3.1.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-stylelint": "^9.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-wp-pot": "^2.3.5",
    "gulp-zip": "^5.0.0",
    "lint-staged": "^9.4.0",
    "standard-changelog": "^2.0.13",
    "standard-version": "^7.0.0",
    "stylelint": "^10.1.0",
    "stylelint-config-standard-scss": "^1.1.0",
    "stylelint-scss": "^3.11.0",
    "yargs": "^14.0.0",
    "yorkie": "^2.0.0"
  },
  "standard-version": {
    "scripts": {}
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -e -V"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "globals": {
      "jQuery": true,
      "wp": true
    },
    "extends": [
      "plugin:@wordpress/eslint-plugin/esnext"
    ],
    "parserOptions": {
      "ecmaVersion": 8,
      "parser": "babel-eslint"
    },
    "rules": {
      "indent": [
        2,
        2
      ],
      "no-console": 2,
      "semi": [
        2,
        "never"
      ],
      "wrap-iife": [
        2,
        "inside"
      ]
    }
  },
  "eslintIgnore": [
    "**/*.min.js",
    "**/vendor/**",
    "/build/**",
    "/node_modules/**",
    "/public/**",
    "/gulpfile.js",
    "/**.old"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard-scss"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "source/**/*.php": [
      "composer lint",
      "git add"
    ],
    "source/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "source/**/*.scss": [
      "stylelint --fix",
      "git add"
    ]
  }
}
