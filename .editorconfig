# editorconfig.org
root = true

[**]
end_of_line = lf
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{js,yml,json,scss,toml}]
indent_size = 2

[.*rc]
indent_size = 2

[source/**.php]
indent_style = tab

[tests/**.php]
indent_style = space

[*.md]
trim_trailing_whitespace = false

[{*.txt,wp-config-sample.php}]
end_of_line = crlf
